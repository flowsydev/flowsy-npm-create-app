{
  "name": "@flowsydev/create-app",
  "version": "1.0.0",
  "description": "Flowsy Application Starter Tool",
  "type": "module",
  "bin": {
    "create-app": "bin/cli.js"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "bin",
    "templates",
    "README.md"
  ],
  "scripts": {
    "start": "node bin/cli.js",
    "pub": "npm publish --access public",
    "prepare": "husky",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    "format": "prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flowsydev/flowsy-npm-create-app.git"
  },
  "keywords": [
    "tool",
    "initializer"
  ],
  "author": "Adrián Avilés",
  "license": "ISC",
  "dependencies": {
    "fs-extra": "^11.3.1",
    "kolorist": "^1.8.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "eslint": "^10.0.1",
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.8.1"
  }
}
